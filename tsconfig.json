/*
 * Typehinting vscode
 * @author Dimas Lanjaka <dimaslanjaka@gmail.com>
 */
{
	"compilerOptions": {
		"target": "es5",
		"sourceMap": true,
		"removeComments": true,
		"allowUmdGlobalAccess": true,
		"allowSyntheticDefaultImports": true,
		"noImplicitAny": true,
		"allowUnusedLabels": true,
		"allowUnreachableCode": true,
		"skipLibCheck": true,
		"importHelpers": true,
		"declaration": true,
		"allowJs": true,
		"lib": ["DOM", "ESNext", "ES2020", "ES2015", "ES6"],
		"typeRoots": ["node_modules/@types"],
		"outDir": "./tmp/js",
		//"outFile": "./tmp/js/app.js",
		"declarationDir": "./tmp/js",
		"declarationMap": true,
		"sourceRoot": "./libs"
		//"rootDir": "./libs",
	},
	"typeAcquisition": { "include": ["jquery"] },
	"include": ["./src/**/*"],
	"exclude": [
		"**/node_modules",
		"**/tmp"
	],
	"compileOnSave": true
}
