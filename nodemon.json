{
  "$schema": "http://json.schemastore.org/nodemon",
  "exec": "node -r ts-node/register server.js",
  "watch": [
    "**/*.ts",
    "./src/**/*",
    "**/tsconfig.json",
    "**/package.json",
    "./server.js"
  ],
  "ignore": [
    "**/dist/**",
    "**/node_modules/**"
  ],
  "delay": 3000,
  "ext": "*",
  "verbose": false
}